<%- include('header'); %>

<%- include('navbar', {active: active}); %>

<div class="container">
    <h1 class="text-center mt-3 title">New Attachment</h1>
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="new-attachment-box" class="col-md-6 text-center mt-5">
            <% if (success_msg === true) {%>
                <div class="alert alert-success" role="alert">
                    Attachment successfully updated, go back to see changes!
                </div>
            <% } %>
            <form action="<%= "/dashboard/attachments/edit?attachmentName=" + locals.attachment.name + "&noteId=" + locals.noteId %>" method="post">
                <div class="form-group mt-4">
                    <input type="text" name="name" class="form-control" id="usernameInput" value="<%= locals.attachment.name %>">
                </div>
                <div class="form-group">
                    <input type="text" name="url" class="form-control" value="<%= locals.attachment.url %>">
                </div>
                <div class="form-group align-items-center">
                    <button type="submit" class="btn" id="submit" >Save</button>
                </div>
            </form>
            <form action="<%= "/dashboard/note/" + locals.noteId %>">
                <button type="submit" class="btn back"><i class="fas fa-long-arrow-alt-left"></i> Back</button>
            </form>
        </div>
    </div>
</div>

<%- include('footer'); -%>

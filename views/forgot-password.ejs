<%- include('header'); %>

<div class="container">
    <h1 class="text-center pt-5 title" id="title">NoteKeeper</h1>

    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-box" class="col-md-6 text-center mt-5">
            <h3 class="title mt-3">Forgotten Password</h3>
            <% if (locals.success_msg === true) {%>
                <div class="alert alert-success" role="alert">
                    Your new passowrd is: "<%= locals.newpw%>"!
                </div>
            <% } %>
            <% if (locals.error)  { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <form action="/auth/forgotPassword" method="post">
                <div class="form-group mt-4">
                    <input type="text" name="username" class="form-control" id="usernameInput" placeholder="Username">
                </div>
                <div class="form-group align-items-center">
                    <button type="submit" class="btn" id="submit">Get new Password</button>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col text-left">
                            <a href="/auth/login">Already a Member? Login Here!</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('footer'); -%>

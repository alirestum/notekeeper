<%- include('header'); %>

<%- include('navbar', {active: active}); %>

<div class="container">
    <h1 class="text-center mt-3 title">Edit Note</h1>
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-box" class="col-md-6 text-center mt-5">
            <% if (success_msg == true) { %>
                <div class="alert alert-success" id="note-name-warning" role="alert">
                    Note successfully updated!
                </div>
            <% } %>
            <form action="<%= "/dashboard/editnote?noteId=" + note.noteId %>" method="post">
                <div class="form-group mt-4">
                    <input type="text" name="noteName" class="form-control" id="usernameInput" value="<%= note.name %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="3"><%= note.content %></textarea>
                </div>
                <div class="form-group text-left">
                    <input type="text" class="form-control" name="tags" value="<% note.tags.forEach( (tag) =>{ %><%= tag %> <% }) %>">
                    <small id="emailHelp" class="form-text text-muted">Required format: #tag1 #tag2</small>
                </div>
                <div class="form-group align-items-center">
                    <button type="submit" class="btn" id="submit" >Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('footer'); -%>

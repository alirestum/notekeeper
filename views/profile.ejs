<%- include('header'); %>

<%- include('navbar', {active: active}); %>

<div class="container">
    <h1 class="text-center mt-3 title">Profile</h1>
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="profile-box" class="col-md-6 text-center mt-5">
            <% if (success_msg === true) {%>
                <div class="alert alert-success" role="alert">
                    Profile successfully updated
                </div>
            <% } %>
            <% if (errors !== null)  { %>
                <% errors.forEach((error) => { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error.msg %>
                    </div>
                <% }) %>
            <% } %>
            <form action="/user/profile" method="post">
                <div class="form-group mt-4">
                    <input type="text" name="name" class="form-control" id="nameInput" value="<%= user.name %>">
                </div>
                <div class="form-group mt-4">
                    <input type="text" name="username" class="form-control" id="usernameInput" value="<%= user.username%>">
                </div>
                <div class="form-group text-left">
                    <input type="password" name="password" class="form-control" id="passwordInput1" placeholder="Password">
                    <small id="emailHelp" class="form-text text-muted">You can change your password by typing in the new one.</small>
                </div>
                <div class="form-group">
                    <input type="password" name="password2" class="form-control" id="passwordInput2" placeholder="Password Again">
                </div>
                <div class="form-group align-items-center">
                    <button type="submit" class="btn" id="submit">Save</button>
                </div>
            </form>
                <div class="form-group align-items-center">
                    <button type="submit" class="btn btn-danger" id="remove">Delete profile</button>
                </div>

        </div>
    </div>
</div>

<%- include('footer'); -%>
